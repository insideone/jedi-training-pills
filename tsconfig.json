{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es2015",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "rootDir": "./",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    }
}
